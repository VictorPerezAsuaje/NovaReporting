@using NovaPdf.Reporting.Core
@model INovaReport

@{
    string bodyClasses = Model.IsPreview ? "d-flex flex-column align-items-center justify-content-center min-vh-100" : "p-4";
    string bodyStyles = Model.IsPreview ? "background-color:#f1f1f1;" : "";
    string mainContainerClasses = Model.IsPreview ? "pt-4 bg-white" : "";
    string mainContainerStyles = Model.IsPreview ? $"width: {(Model.Layout == ReportLayout.Vertical ? Model.Format.Width : Model.Format.Height)}mm; min-height: 95vh;" : "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --bs-font-sans-serif: 'Liberation Sans', Arial, sans-serif !important;
        }

        body {
            font-family: var(--bs-font-sans-serif) !important;
        }
    </style>
</head>
<body class="@bodyClasses" style="@bodyStyles">
    <main class="@mainContainerClasses" style="@mainContainerStyles">
        @if (Model.IsPreview)
        {
            <partial name="@Model.Name/Header" />
        }

        @if (Model.IsPreview)
        {
            <div class="p-4">
                @RenderBody()
            </div>
        }
        else
        {
            @RenderBody()
        }
    </main>
 </body>
</html>