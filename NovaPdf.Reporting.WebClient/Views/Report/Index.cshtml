@{
    ViewData["Title"] = "Home Page";
}

<div>
    <img src="~/img/logo.svg" class="my-5" style="width: 250px; height:auto;" />

    <h3>Sales Report 2025 Q2</h3>
    <div class="d-flex gap-4 flex-row align-items-center">
        <a asp-controller="Report" asp-action="PreviewSales" target="_blank">Preview</a>
        <form asp-controller="Report" asp-action="DownloadSales">
            <button class="btn btn-outline-primary">Razor PDF</button>
        </form>
        <form asp-controller="Report" asp-action="DownloadStaticSales">
            <button class="btn btn-outline-primary">HTML PDF</button>
        </form>
    </div>
</div>